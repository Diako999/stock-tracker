<div class="row">
  <div class="col-9">
    <table class="table table-hover table-bordered table-dark mt-2">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.email %></td>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= link_to 'unfollow', friendship_path(friend), method: :delete, data: {confirm: "sure??!!"}, class: "btn btn-sm  btn-danger" %>
              <%= link_to 'view profile', user_path(friend), class: "btn btn-sm  btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
